.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:todays_topics, :index)
      %li=link_to pat(:new), url(:todays_topics, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:todays_topics)
    .inner
      %table.table
        %tr
          %th.first=mat(:todays_topic, :id)
          %th=mat(:todays_topic, :topic)
          %th.last="&nbsp;"
        -@todays_topics.each do |todays_topic|
          %tr
            %td.first=todays_topic.id
            %td=todays_topic.topic
            %td.last
              =button_to pat(:edit), url(:todays_topics, :edit, :id => todays_topic.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:todays_topics, :destroy, :id => todays_topic.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')"
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")
