!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %title Bootstrap, from Twitter
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
  %link{:href => "http://twitter.github.com/bootstrap/assets/css/bootstrap.css", :rel => "stylesheet"}
  :css
    body { padding-top: 60px; padding-bottom: 40px; }
  %link{:href => "http://twitter.github.com/bootstrap/assets/css/bootstrap-responsive.css", :rel => "stylesheet"}
  %link{:href => "http://twitter.github.com/bootstrap/assets/images/favicon.ico", :rel => "shortcut icon"}
  %link{:href => "images/apple-touch-icon.png", :rel => "apple-touch-icon"}
  %link{:href => "http://twitter.github.com/bootstrap/assets/images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}
  %link{:href => "http://twitter.github.com/bootstrap/assets/images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "#"} Project name
          .nav-collapse
            %ul.nav
              %li
                - if current_account.blank?
                  = link_to 'Login with Facebook', '/auth/facebook'
                - else
                  = link_to 'Logout', '/destroy'