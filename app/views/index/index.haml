%html
  %head
    %script{src:'/assets/application.js'}

  %body
    = partial 'layouts/header'
    .container
      %input#music_search{type: "text", placeholder:"search your music" }
      #search_result
      #songs_list

  %script{type:'text/template', id: 'search_tmpl'}
    %div.result_box
      %div.img
        %img{:src => "{{data.thumbnail}}", :alt => "{{data.title}}", height: '30px'}
      %div.text
        %p {{data.title}}
      %input.add_song{:type => "button", :value => 'add'}

:javascript
  $(function(){
    window.router = new Ohgiri.Routers.Router()
    Backbone.history.start();
  })

:css
  #search_result{
    float: left;
    width: 450px;
  }
  #songs_list{
    float: left;
    background-color: #ccc;
    width: 450px;
    height: 1000px;
  }
  .result_box{
    width: 450px;
    height: 36px;
    margin-top: 10px;
  }
  .result_box:hover{
    background-color: #e1e1e1;
  }
  .result_box:after{
    clear: both;
  }
  .result_box div{
    float: left;
  }
  .result_box .text{
    height: 35px;
    padding-left: 10px;
    width: 200px;
  }
  .result_box .text p{
    text-overflow: ellipsis;
  }
  .result_box div img{
    margin-top: 3px;
  }
  .result_box p{
    float: left;
    font-size: 10px;
  }
